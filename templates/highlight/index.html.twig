{% extends 'base.html.twig' %}

{% block title %}Highlight index{% endblock %}

{% block body %}
    <h1>Highlight index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Name</th>
                <th>Description</th>
                <th>Project</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for highlight in highlights %}
            <tr>
                <td>{{ highlight.id }}</td>
                <td>{{ highlight.date ? highlight.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ highlight.name }}</td>
                <td>{{ highlight.description }}</td>
                <td>{{ highlight.project.id }}</td>
                <td>
                    <a href="{{ path('highlight_show', {'id': highlight.id}) }}">show</a>
                    <a href="{{ path('highlight_edit', {'id': highlight.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('highlight_new') }}">Create new</a>
{% endblock %}
